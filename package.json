{
  "name": "web-wallet",
  "description": "Iden 3 SPA web application wallet",
  "version": "0.1.0",
  "private": false,
  "main": "index.js",
  "scripts": {
    "build:prod": "webpack -p --config webpack.prod.js",
    "build:dev": "webpack-dev-server --display-error-details --open --config webpack.dev.js --hot --inline",
    "tests": "jest --setupTestFrameworkScriptFile",
    "preinstall": "npm install ../iden3js/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iden3/web-wallet.git"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "wallet",
    "identity",
    "iden3",
    "0kims"
  ],
  "engines": {
    "node": ">= 8.9",
    "npm": ">= 5.5"
  },
  "author": {
    "name": "0kims association",
    "url": "https://0kims.org/",
    "email": "info@0kims.org"
  },
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/iden3/web-wallet.git/issues"
  },
  "homepage": "https://github.com/iden3/web-wallet",
  "jest": {
    "cacheDirectory": "<rootDir>/__tests__/!tmp/cache",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/__tests__/!reports",
    "coverageThreshold": {
      "./src/components/": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/state/": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/helpers/": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/views/": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^views(.*)$": "<rootDir>/src/views/$1",
      "^base_components(.*)$": "<rootDir>/src/components/$1",
      "^state(.*)$": "<rootDir>/src$1/state",
      "^constants(.*)$": "<rootDir>/src/constants/$1",
      "^fixtures(.*)$": "<rootDir>/src/fixtures/fixtures.js",
      "^helpers(.*)$": "<rootDir>/src/helpers/utils.js",
      "^test_helpers(.*)$": "<rootDir>/__tests__/utils/helpers.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__tests__/mocks/file-mock.js",
      "\\.(svg)$": "<rootDir>/src/__tests__/mocks/svg-mock.js",
      "\\.(css|scss)$": "<rootDir>/__tests__/mocks/file-mock.js"
    },
    "notify": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/__tests__/",
      "<rootDir>/static/",
      "<rootDir>/src/index.js",
      "<rootDir>/src/styles/"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ],
    "verbose": true,
    "setupFiles": [
      "<rootDir>/__tests__/mocks/shims.js",
      "<rootDir>/__tests__/setup-tests.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.5.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "react-hot-loader": "^4.3.11",
    "react-router-enzyme-context": "^1.2.0",
    "redux-devtools": "^3.4.1",
    "redux-devtools-extension": "^2.13.5",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^1.3.3",
    "style-loader": "^0.22.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.23.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.14",
    "webpack-md5-hash": "0.0.6",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "antd": "^3.9.1",
    "bip39": "^2.5.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.0.0-alpha.24",
    "iden3": "file:../iden3js",
    "identicon.js": "^2.3.3",
    "immutable": "^3.8.2",
    "jsqr": "^1.1.1",
    "memoize-one": "^4.0.0",
    "prop-types": "^15.6.2",
    "qrcode.react": "^0.9.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  }
}
